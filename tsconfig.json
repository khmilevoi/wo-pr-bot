{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
